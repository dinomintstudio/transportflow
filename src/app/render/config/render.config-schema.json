{
  "type": "object",
  "description": "Render configuration schema",
  "additionalProperties": false,
  "required": [
    "tileResolution",
    "spriteResolution",
    "minimapResolution",
    "chunkSize",
    "chunkLoadOverhead",
    "zoomAnimationSpeed",
    "debugOverlayKey",
    "consoleKey"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Path to config schema"
    },
    "spriteResolution": {
      "type": "integer",
      "description": "Sprite resolution in pixels per tile"
    },
    "tileResolution": {
      "type": "integer",
      "description": "Tile resolution in pixels per tile"
    },
    "minimapResolution": {
      "type": "integer",
      "description": "Minimap resolution in pixels per tile"
    },
    "chunkSize": {
      "type": "integer",
      "description": "Chunk size in tiles per chunk side"
    },
    "chunkLoadOverhead": {
      "type": "integer",
      "description": "The amount of chunks being loaded ahead off-view"
    },
    "maxFps": {
      "type": [
        "integer",
        "null"
      ],
      "description": "FPS limit"
    },
    "zoomAnimationSpeed": {
      "type": "number",
      "description": "Speed of zoom animation",
      "minimum": 0,
      "maximum": 1
    },
    "animationUps": {
      "type": "number",
      "description": "Max rate of animation update",
      "minimum": 0
    },
    "debugOverlayKey": {
      "type": "string",
      "description": "Key that triggers visibility of the debug overlay"
    },
    "consoleKey": {
      "type": "string",
      "description": "Key that triggers console visibility"
    }
  }
}
